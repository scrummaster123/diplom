@page "/events"

<MudGrid>
    <MudItem xs="12">
        <MudStack Row="true">
            <MudDateRangePicker Label="Basic range picker" DateRange="CurrentDateRange" 
                                DateRangeChanged="SetDateRange" />
            <MudCheckBox ValueChanged="@((bool v) => OnIsVacationChanged(v))"
                         Value="IsVacation" Label="Открытый отдых" LabelPlacement="Placement.Start" Color="Color.Primary" />
        </MudStack>
    </MudItem>
    
    <MudItem xs="12">
        <MudDataGrid Items="@FilteredEvents" Hover="true" RowClick="@OnRowClickHandler" Class="cursor-pointer">
            <Columns>
                <PropertyColumn Property="x => x.DateStart" Title="Дата проведения" />
                <PropertyColumn Property="x => x.Location.Name" Title="Место" />
                <PropertyColumn Property="x => x.Sponsor.FirstName" Title="Организатор мероприятия"/>
            </Columns>
        </MudDataGrid>
    </MudItem>
    
    <MudItem xs="12" Class="d-flex justify-end mt-4">
        <MudButton OnClick="OnCreateClickHandler" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" StartIcon="@Icons.Material.Filled.Add">Создать</MudButton>
    </MudItem>
</MudGrid>
